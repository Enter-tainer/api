{
  "name": "typescript-express",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"tsc -w -p src\" \"nodemon dist/index.js -e ts\"",
    "debug": "concurrently --kill-others \"tsc -w -p src\" \"nodemon --inspect dist/index.js -e ts\"",
    "test:watch": "mocha -r ts-node/register -w ./spec/**/*.spec.ts --watch-extensions ts",
    "test": "mocha -r ts-node/register -w ./spec/**/*.spec.ts",
    "build": "tsc -p src",
    "start": "node dist/index.js",
    "build:docker": "docker build -t rjmacarthy/express-typescript-starter .",
    "docker:compose": "docker-compose up",
    "format": "eslint \"src/**/*.ts\" --fix && prettier \"src/**/*.{ts,json,md}\" --write",
    "format:check": "eslint \"src/**/*.ts\" && prettier-check \"src/**/*.{ts,json,md}\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:test": "tslint -c tslint.json 'spec/**/*.ts'",
    "format:test": "prettier --write 'spec/**/*.ts'"
  },
  "gitHooks": {
    "pre-commit": "npm run format:check"
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "cookie-parser": "~1.3.5",
    "cross-env": "^5.1.5",
    "debug": "^4.0.1",
    "express": "^4.13.4",
    "fresh": "^0.5.2",
    "glob": "^5.0.14",
    "lodash": "^4.17.15",
    "mongoose": "^4.11.1",
    "morgan": "^1.6.1",
    "negotiator": "^0.6.1",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.2.0",
    "swagger-ui-express": "^4.0.7",
    "tslint-config-prettier": "^1.18.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.0.36",
    "@types/lodash": "^4.14.137",
    "@types/mocha": "^5.2.0",
    "@types/mongoose": "^4.7.18",
    "@types/node": "^8.10.52",
    "@types/sinon": "^4.3.3",
    "@types/socket.io": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^5.1.1",
    "node-mocks-http": "^1.7.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "sinon": "^5.0.7",
    "tslint": "^5.18.0",
    "typescript": "^2.4.1"
  }
}
